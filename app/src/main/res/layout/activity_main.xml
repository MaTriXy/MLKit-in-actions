<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/textRecognitionDemoBtn"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_text_fields_white_24dp"
        android:text="@string/demo_text_recognition"
        app:layout_constraintBottom_toTopOf="@+id/faceRecognitionDemoBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/faceRecognitionDemoBtn"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_face_white_24dp"
        android:text="@string/demo_face_recognition"
        app:layout_constraintBottom_toTopOf="@+id/customModelDemoBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRecognitionDemoBtn"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/customModelDemoBtn"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_toys_white_24dp"
        android:text="@string/demo_custom_model"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faceRecognitionDemoBtn"
        app:layout_constraintVertical_chainStyle="packed" />

</android.support.constraint.ConstraintLayout>